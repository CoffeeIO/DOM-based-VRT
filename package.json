{
  "name": "typesetbot",
  "version": "0.2.1",
  "description": "Small project to dynamically typeset text on the web",
  "author": "Mathias Grundtvig Andreasen (MGApcDev)",
  "license": "GPL-3.0",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "node-sass": "^4.11.0",
    "uglify-js": "^3.4.9"
  },
  "scripts": {
    "start": "python -m SimpleHTTPServer",
    "uglify": "node_modules/uglify-js/bin/uglifyjs src/*.js -o dist/domvrt.min.js",
    "copyToChrome": "cp dist/domvrt.min.js ChromeExtension/domvrt.min.js",
    "compile": "npm run uglify && npm run copyToChrome",
    "watch": "watch 'npm run compile' ./src"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/MGApcDev/DOM-based-VRT"
  }
}
